<?xml version="1.0" encoding="UTF-8"?>
<Frame xmlns="http://xamarin.com/schemas/2014/forms"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       xmlns:d="http://xamarin.com/schemas/2014/forms/design"
       xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
       mc:Ignorable="d"
       xmlns:icons="clr-namespace:OnDijon.Common.Utils.Fonts"
       x:Class="OnDijon.Common.Views.SwitchIconView"
       Padding="4"
       BackgroundColor="{StaticResource cyanBlue}"
       CornerRadius="20">

    <Frame.Content>
        <StackLayout Orientation="Horizontal"
                     Spacing="4">
            <ImageButton x:Name="LeftButton"
                         Style="{StaticResource SwitchIconButton}"
                         Source="{FontImage FontFamily={StaticResource MaterialDesignIcons}, Glyph={Static icons:MaterialDesignIcons.MapCheckOutline}, Color=White, Size=24}"
                         Clicked="OnLeftTapped" />

            <ImageButton x:Name="RightButton"
                         Style="{StaticResource SwitchIconButton}"
                         Source="{FontImage FontFamily={StaticResource MaterialDesignIcons}, Glyph={Static icons:MaterialDesignIcons.FormatListBulleted}, Color={StaticResource kleinBlue}, Size=24}"
                         Clicked="OnRightTapped" />

        </StackLayout>
    </Frame.Content>
</Frame>